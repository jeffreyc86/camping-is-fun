<h1>Sign Up a Camper to an Activity</h1>
<br>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p style="color: red;"><%= error %></p>
    <% end %>
<% end %>    
<br>
<%= form_for @sign_up do |f| %>
    <%= f.label :camper_id %>
    <%= f.collection_select :camper_id, @campers, :id, :name %><br>
    <%= f.label :activity_id %>
    <%= f.collection_select :activity_id, @activities, :id, :name %><br>
    <%= f.label :time, "Sign Up Time:" %>
    <%= f.select :time, 0..23 %><br>

    <%= f.submit %>
<% end %>
